<!DOCTYPE html>
<html lang="ar">
  <%- include('./partials/head') %>
  <body id="body"  >
   
<div id="mydiv">

  <%- include('./partials/header') %>
</div>

    <main id="main">
<section>


<h1>Article details</h1>
<!-- DISPLAY FETCH DATA OF ARTICLES FROM MONGODB -->
<h4 class="title"><%= objArticle.title %></h4>
<hr>
<p class="subject"><%= objArticle.subject %></p>

<!-- // using partials to route the webiste EJS  -->
<button data-link="<%= objArticle._id %>" class="myButton">DELETE ARTICLE</button>

</section>


<%- include('./partials/footer') %>
    </main>
    <script>
      const deleteBtn = document.getElementsByClassName("myButton")[0].getAttribute("data-link");
const dltBtn = document.getElementsByClassName("myButton")[0];
dltBtn.addEventListener("click",(eo) => {
  fetch(`/index/${deleteBtn}`,{method:'DELETE'})
  .then((response) => response.json())
  .then((data) =>  window.location.href = data.myindex)
  .catch((err) => {  console.log(err)})
})

    </script>
  </body>
</html>
